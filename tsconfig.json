{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "sourceMap": true,

    "outDir": "build/",
    "moduleResolution": "node",
    "rootDir": "src",

    "noImplicitReturns": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
  },
  "exclude": [
    "node_modules",
    "build",
    "./jest.config.ts"
  ]
}